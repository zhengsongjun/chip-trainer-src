{
  "name": "functions",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch --preserveWatchOutput",
    "dev": "concurrently -k -n \"tsc,emulators\" -c \"cyan,green\" \"yarn build:watch\" \"firebase emulators:start --only functions,firestore\"",
    "deploy": "yarn build && firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "24"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^13.6.0",
    "firebase-functions": "^7.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "firebase-functions-test": "^3.4.1",
    "typescript": "^5.7.3"
  },
  "private": true
}
